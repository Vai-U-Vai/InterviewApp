<resources>
    <!-- Стиль для EditText внутри TextInputLayout -->
    <style name="EditTextStyle" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@sans-serif</item>
    </style>

    <!-- Стиль для TextView -->
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@sans-serif</item>
    </style>

    <!-- Стиль для RadioButton -->
    <style name="RadioButtonStyle" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@sans-serif</item>
    </style>

    <!-- Стиль для CheckBox -->
    <style name="CheckBoxStyle" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@sans-serif</item>
    </style>

    <!-- Стиль для Button -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/md_theme_light_primary</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@sans-serif</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
